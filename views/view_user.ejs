<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>View / Edit User</title>
  </head>
  <body>
    <h1>View / Edit User</h1>

    <form action="/users/<%= user._id %>/edit" method="post">

      <div class="form-element">
        <label>Forename</label>
        <input id="input-forename" type="text" name="forename" value="<%= user.forename %>">
      </div>

      <div class="form-element">
        <label>Surname</label>
        <input id="input-surname" type="text" name="surname" value="<%= user.surname %>">
      </div>
        
      <div class="form-element">
        <label>Email</label>
        <input id="input-email" type="email" name="email" value="<%= user.email %>">
      </div>

      <button type="submit" id="update">Update User</button>
    </form>

    <ul>
      <li><%= user.forename %></li>
      <li><%= user.surname %></li>
      <li><%= user.email %></li>
      <li><%= user.id %></li>
      <li><%= user.date %></li>
    </ul>

    <a id="index" href="/">Add more users</a>
    <a id="view-all" href="/users">View all users</a>

  </body>
</html>